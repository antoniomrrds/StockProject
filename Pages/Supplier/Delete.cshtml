@page
@model StockProject.Pages.Supplier.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-body">
                    <h1 class="card-title text-center text-danger mb-4">Excluir Fornecedor</h1>

                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Atenção!</h4>
                        <p>Tem certeza de que deseja excluir o fornecedor abaixo?</p>
                        <hr>
                        <p class="mb-0">Esta ação não pode ser desfeita.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier.Name)</dd>

                        <dt class="col-sm-4">Endereço:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier.Address)</dd>

                        <dt class="col-sm-4">CNPJ:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier.CNPJ)</dd>

                        <dt class="col-sm-4">CEP:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier.CEP)</dd>

                        <dt class="col-sm-4">Data de Criação:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier.CreatedAt)</dd>

                        <dt class="col-sm-4">QRCode:</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Supplier.QRCode)
                        </dd>
                    </dl>

                    <form method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Exclusão
                        </button>
                        <a asp-page="./Index" class="btn btn-info">
                            <i class="bi bi-box-arrow-left"></i> Voltar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
