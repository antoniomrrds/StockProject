@page
@model StockProject.Pages.Supplier.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Fornecedores</h1>

<p>
    <a asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Supplier)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-warning btn-sm mr-1" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="./Details" class="btn btn-info btn-sm mr-1" asp-route-id="@item.Id">
                        <i class="bi bi-info-circle"></i>

                    </a>
                    <a asp-page="./Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i>

                    </a>
            </tr>
        }
    </tbody>
</table>
