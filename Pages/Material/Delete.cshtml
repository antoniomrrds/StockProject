@page
@model StockProject.Pages.Material.DeleteModel

@{
    ViewData["Title"] = "Delete Material";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-body">
                    <h1 class="card-title text-center text-danger mb-4">Excluir Material</h1>

                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Atenção!</h4>
                        <p>Tem certeza de que deseja excluir o material abaixo?</p>
                        <hr>
                        <p class="mb-0">Esta ação não pode ser desfeita.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.Code)</dd>

                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.Name)</dd>

                        <dt class="col-sm-4">Descrição:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.Description)</dd>

                        <dt class="col-sm-4">Código Fiscal:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.FiscalCode)</dd>

                        <dt class="col-sm-4">Espécie:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.Specie)</dd>

                        <dt class="col-sm-4">Data de Criação:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.CreatedAt)</dd>

                        <dt class="col-sm-4">Data de Atualização:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.UpdatedAt)</dd>

                        <dt class="col-sm-4">Criado Por:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.CreatedBy)</dd>

                        <dt class="col-sm-4">Atualizado Por:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Material.UpdatedBy)</dd>

                        <dt class="col-sm-4">Fornecedor:</dt>
                        <dd class="col-sm-8">@Model.Material.Supplier?.Name</dd>
                    </dl>

                    <form method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Exclusão
                        </button>
                        <a asp-page="./Index" class="btn btn-info">
                            <i class="bi bi-box-arrow-left"></i> Voltar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
